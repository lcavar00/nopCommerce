@model Nop.Plugin.Shipping.Core.Areas.Admin.Models.ShippingSettingsModelExtension

@{
    //page title
    ViewBag.PageTitle = T("Admin.Configuration.Settings.Shipping").Text;
    //active menu item (system name)
    NopHtml.SetActiveMenuItemSystemName("Shipping settings");
}

@{
    const string hideCommonBlockAttributeName = "ShippingSettingsPage.HideCommonBlock";
    var hideCommonBlock = await genericAttributeService.GetAttributeAsync<bool>(await workContext.GetCurrentCustomerAsync(), hideCommonBlockAttributeName);

    const string hideNotificationsBlockAttributeName = "ShippingSettingsPage.HideNotificationsBlock";
    var hideNotificationsBlock = await genericAttributeService.GetAttributeAsync<bool>(await workContext.GetCurrentCustomerAsync(), hideNotificationsBlockAttributeName);

    const string hideCheckoutBlockAttributeName = "ShippingSettingsPage.HideCheckoutBlock";
    var hideCheckoutBlock = await genericAttributeService.GetAttributeAsync<bool>(await workContext.GetCurrentCustomerAsync(), hideCheckoutBlockAttributeName);

    const string hideShippingOriginBlockAttributeName = "ShippingSettingsPage.HideShippingOriginBlock";
    var hideShippingOriginBlock = await genericAttributeService.GetAttributeAsync<bool>(await workContext.GetCurrentCustomerAsync(), hideShippingOriginBlockAttributeName);

    const string hideAddressSettingsBlockAttributeName = "ShippingManagementSettingsPage.HideAddressSettingsBlock";
    var hideAddressSettingsBlock = await genericAttributeService.GetAttributeAsync<bool>(await workContext.GetCurrentCustomerAsync(), hideAddressSettingsBlockAttributeName);
}

<form asp-controller="CustomSetting" asp-action="CustomShipping" method="post">
    <div class="content-header clearfix">
        <h1 class="float-left">
            @T("Admin.Configuration.Settings.Shipping")
        </h1>
        <div class="float-right">
            <button type="submit" name="save" class="btn btn-primary">
                <i class="far fa-save"></i>
                @T("Admin.Common.Save")
            </button>
            @await Component.InvokeAsync("AdminWidget", new { widgetZone = AdminWidgetZones.ShippingSettingsButtons })
        </div>
    </div>

    <div class="content">
        <div class="container-fluid">
            <div class="form-horizontal">
                @await Component.InvokeAsync("StoreScopeConfiguration")
                @await Component.InvokeAsync("SettingMode")
                <div asp-validation-summary="All"></div>

                <nop-cards id="product-panels">
                    <nop-card asp-name="product-info" asp-icon="fa fa-info" asp-title="@T("Admin.Configuration.Settings.Shipping.BlockTitle.Common")" asp-hide-block-attribute-name="@hideCommonBlockAttributeName" asp-hide="@hideCommonBlock" asp-advanced="false">@await Html.PartialAsync("~/Plugins/Shipping.Core/Areas/Admin/Views/CustomSettings/_Shipping.Common.cshtml", Model)</nop-card>
                    <nop-card asp-name="product-notifications" asp-icon="fa fa-bell" asp-title="@T("Admin.Configuration.Settings.Shipping.BlockTitle.Notifications")" asp-hide-block-attribute-name="@hideNotificationsBlockAttributeName" asp-hide="@hideNotificationsBlock" asp-advanced="true">@await Html.PartialAsync("~/Plugins/Shipping.Core/Areas/Admin/Views/CustomSettings/_Shipping.Notifications.cshtml", Model)</nop-card>
                    <nop-card asp-name="product-checkout" asp-icon="fa fa-credit-card" asp-title="@T("Admin.Configuration.Settings.Shipping.BlockTitle.Checkout")" asp-hide-block-attribute-name="@hideCheckoutBlockAttributeName" asp-hide="@hideCheckoutBlock" asp-advanced="false">@await Html.PartialAsync("~/Plugins/Shipping.Core/Areas/Admin/Views/CustomSettings/_Shipping.Checkout.cshtml", Model)</nop-card>
                    <nop-card asp-name="shippingmanagementsettings-addresssettings" asp-icon="fa fa-info" asp-title="@T("Plugins.Shipping.Core.Admin.Configuration.Settings.ShippingManagement.BlockTitle.AddressSettings")" asp-hide-block-attribute-name="@hideAddressSettingsBlockAttributeName" asp-hide="@hideAddressSettingsBlock" asp-advanced="false">@await Html.PartialAsync("~/Plugins/Shipping.Core/Areas/Admin/Views/CustomSettings/_Shipping.AddressSettings.cshtml", Model.ShippingPickupAddressSettingsModel)</nop-card>
                    <nop-card asp-name="product-shipping-origin" asp-icon="fa fa-truck" asp-title="@T("Admin.Configuration.Settings.Shipping.ShippingOriginAddress")" asp-hide-block-attribute-name="@hideShippingOriginBlockAttributeName" asp-hide="@hideShippingOriginBlock" asp-advanced="false">@await Html.PartialAsync("~/Plugins/Shipping.Core/Areas/Admin/Views/CustomSettings/_Shipping.ShippingOrigin.cshtml", Model)</nop-card>

                    @await Component.InvokeAsync("AdminWidget", new { widgetZone = AdminWidgetZones.ShippingDetailsBlock, additionalData = Model })
                </nop-cards>
            </div>
        </div>
    </div>
</form>